<MyLayout>
    id: my_widget
    BoxLayout:
        orientation: "vertical"
    	size: root.width, root.height
    	padding: 50
    	spacing: 20
        Button:
            on_release: root.choose()
            font_size: 20
            text: 'Select a file'
        Image:
            id: my_image
            source: ""
        Label:
            text: ""
            font_size: 20
            id: label
        Button:
            text: "Classify Image"
            font_size: 20
            on_press: app.classify_image()
